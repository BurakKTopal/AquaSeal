# Fly.io Configuration File
# Copy this to fly.toml after running 'flyctl launch'
# Or customize before first deployment

app = "aquaseal-backend"
primary_region = "ord"  # Change to your preferred region

[build]
  dockerfile = "Dockerfile"

[env]
  PORT = "8000"
  # Add your environment variables here (non-sensitive)
  # ALLOWED_ORIGINS = "*"

[http_service]
  internal_port = 8000
  force_https = true
  auto_stop_machines = true
  auto_start_machines = true
  min_machines_running = 0
  processes = ["app"]

  # Health check configuration
  [[http_service.checks]]
    grace_period = "10s"
    interval = "30s"
    method = "GET"
    timeout = "5s"
    path = "/health"

[[vm]]
  cpu_kind = "shared"
  cpus = 1
  memory_mb = 512  # Increased for heavy dependencies (librosa, scipy, opencv)

[processes]
  app = "uvicorn app.main:app --host 0.0.0.0 --port ${PORT:-8000}"

